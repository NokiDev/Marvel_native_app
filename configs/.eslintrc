{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-trailing-spaces": 2,
    "prefer-template": 2,
    "react/no-redundant-should-component-update": 2,
    "react/sort-comp": 2,
    "indent": [2, "tab"],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape":true
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-unused-vars": "off"
  }
}